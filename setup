#!/bin/bash

dir=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

# list files

sources=(vimrc tmux.conf profile);
symlinks=(xbindkeysrc);

# sources

for i in "${sources[@]}"; do
  if [ -e ~/.$i ]
  then
    echo "error file .$i exists";
  else
    echo "writing .$i";
    echo "source ${dir}/.$i" > ~/.$i;
  fi
done

# symlinks

for i in "${symlinks[@]}"; do
  if [ -e ~/.$i ]
  then
    echo "error file .$i exists";
  else
    echo "symlinking .$i";
    ln -s ${dir}/.$i ${HOME}/.$i;
  fi
done

# version managers

curl https://raw.githubusercontent.com/creationix/nvm/v0.24.0/install.sh | bash
curl -sSL https://get.rvm.io | bash -s stable
